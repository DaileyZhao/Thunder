<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">


        <com.zcm.practice.thunder.View.HeightRecordView
            android:id="@+id/heightRecordbiew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_bmi"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/box_weight_record_btn_bg2"
            android:gravity="center"
            android:layout_gravity="right"
            android:textColor="#ff6600"
            android:textSize="16sp"/>

        <com.zcm.practice.thunder.View.WeightRecordView
            android:id="@+id/weightRecordbiew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="44dp"

            android:background="@drawable/box_weight_record_btn_bg1"
            android:gravity="center"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
    </LinearLayout>


</LinearLayout>